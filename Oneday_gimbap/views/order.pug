extends layout

block content
	link(rel="stylesheet",href="/css/order.css")
	section#order
		article.order
			div.t_num #{ORDER.o_table} 번 테이블
			table.order_list
				tr
					th 품목
					th 단가
					th 수량
					th 금액
				if( ORDER.o_seq)
					each vo in ORDER
						tr(data-seq=vo.o_seq)
							td= vo.o_seq
							td= vo.o_pcode
							td= vo.o_price
							td= vo.o_count
							td= (vo.o_count * vo.o_price)
				else
					tr
						td(colspan="4") 주문 목록이 없습니다!

		article.product
			if( PRODUCTS )
				each vo in PRODUCTS
					button.product(data-code= vo.p_code) #{vo.p_name}
			else
				button.no 상품이 존재하지 않습니다

	script.
